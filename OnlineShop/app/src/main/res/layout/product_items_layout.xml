<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/product_image"
        android:layout_width="114dp"
        android:layout_height="149dp"
        android:layout_marginStart="11dp"
        android:clickable="true"
        android:scaleType="fitXY"
        android:src="@drawable/latest1"
        app:shapeAppearanceOverlay="@style/latestProductImgRound"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/product_category"
        android:layout_width="35dp"
        android:layout_height="12dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="91dp"
        android:background="@drawable/rectangle_latest_category"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="Phones"
        android:textAppearance="@style/latestProductCategory"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="75dp"
        android:layout_height="26dp"
        android:layout_below="@+id/product_category"
        android:layout_marginStart="18dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="top"
        android:text="Samsung S10"
        android:textAppearance="@style/latestProductName"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/product_price"
        android:layout_width="75dp"
        android:layout_height="9dp"
        android:layout_below="@+id/product_name"
        android:layout_marginStart="18dp"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="top"
        android:text="$ 180,000"
        android:textAppearance="@style/latestProductPrice"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/product_add_to_cart"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="7dp"
        android:layout_toEndOf="@+id/product_price"
        android:layout_marginTop="124dp"
        android:src="@drawable/add_product_to_shoping_cart"
        tools:ignore="ContentDescription" />
</RelativeLayout>